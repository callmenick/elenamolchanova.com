block variables
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width,initial-scale=1.0")
    title= title ? title : config.SITE_TITLE + " - " + (page ? page : config.SITE_BLURB)
    meta(name="description" content= description || config.SITE_DESCRIPTION)

    meta(name="twitter:card", content="summary_large_image")
    meta(name="twitter:site", content="@nicksalloum_")
    meta(name="twitter:title", content= title || config.SITE_TITLE)
    meta(name="twitter:description", content= description || config.SITE_DESCRIPTION)
    meta(name="twitter:image", content= config.SITE_URL + "/img/og-twitter.png")
    meta(name="twitter:url", content= config.SITE_URL)

    meta(property="og:type," content="website")
    meta(property="og:site_name", content= title || config.SITE_TITLE)
    meta(property="og:title", content= title ? title : config.SITE_TITLE + " - " + (page ? page : config.SITE_BLURB))
    meta(property="og:description", content= description || config.SITE_DESCRIPTION)
    meta(property="og:image", content= config.SITE_URL + "/img/og-facebook.png")
    meta(property="og:url", content= config.SITE_URL)

    link(rel="apple-touch-icon", sizes="180x180", href=config.SITE_URL + "/img/apple-touch-icon.png")
    link(rel="icon", type="image/png", href= config.SITE_URL + "/img/favicon.png", sizes="32x32")
    link(rel="shortcut icon", href= config.SITE_URL + "/img/favicon.ico")
    link(rel="manifest", href= config.SITE_URL + "/manifest.json")

    link(rel="stylesheet", href= config.SITE_URL + "/css/style.css")
  body
    block body
    block scripts
